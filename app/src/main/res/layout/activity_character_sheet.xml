<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="no.ntnu.hallvardpc.loadeddwarvendice.CharacterSheetActivity">

    <EditText
        android:id="@+id/generalinformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:singleLine="false"
        android:text="General Information"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/charactername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@drawable/border"
        android:contentDescription="@string/text_view_character_name"
        android:padding="5dp"
        android:text="@string/text_view_character_name"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/Player"
        android:background="@drawable/border"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/text_view_player"
        android:text="Player"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="92dp" />
</android.support.constraint.ConstraintLayout>
