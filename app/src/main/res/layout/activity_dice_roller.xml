<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundShade"
    tools:context="no.ntnu.hallvardpc.loadeddwarvendice.DiceRoller">

    <Spinner
        android:id="@+id/spinnerCustomSelection"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="24dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintBottom_toTopOf="@+id/animatedDiceRollSelection"
        app:layout_constraintEnd_toStartOf="@+id/createNew"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/spinnerDiceType"
        android:layout_width="97dp"
        android:layout_height="30dp"
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="16dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintBottom_toTopOf="@+id/roll"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Spinner
        android:id="@+id/spinnerAnimatedDiceType"
        android:layout_width="97dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:background="@android:drawable/btn_dropdown"
        app:layout_constraintEnd_toStartOf="@+id/animatedNumberOfDice"
        tools:layout_editor_absoluteY="430dp" />

    <NumberPicker
        android:id="@+id/modifier"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="283dp"
        tools:layout_editor_absoluteY="87dp" />

    <NumberPicker
        android:id="@+id/numberOfDice"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="88dp" />

    <NumberPicker
        android:id="@+id/animatedNumberOfDice"
        android:layout_width="94dp"
        android:layout_height="30dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/darker_gray"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toStartOf="@+id/animatedRollButton"
        tools:layout_editor_absoluteY="430dp" />

    <TextView
        android:id="@+id/DiceTypeTXT"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text="Dice Type: "
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/spinnerDiceType"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/NumberOfDiceTXT"
        android:layout_width="106dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text="Number Of Dice:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/numberOfDice"
        tools:layout_editor_absoluteX="139dp" />

    <TextView
        android:id="@+id/AnimatedDiceTypeTXT"
        android:layout_width="81dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="16dp"
        android:text="Dice Type: "
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/spinnerAnimatedDiceType"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AnimatedNumberOfDiceTXT"
        android:layout_width="106dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text="Number Of Dice:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/animatedNumberOfDice"
        tools:layout_editor_absoluteX="127dp" />

    <TextView
        android:id="@+id/modifierTXT"
        android:layout_width="90dp"
        android:layout_height="21dp"
        android:layout_marginBottom="8dp"
        android:text="Modifier:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/modifier"
        tools:layout_editor_absoluteX="278dp" />

    <TextView
        android:id="@+id/plusTXT"
        android:layout_width="9dp"
        android:layout_height="18dp"
        android:text="+"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="83dp" />

    <TextView
        android:id="@+id/minusTXT"
        android:layout_width="9dp"
        android:layout_height="18dp"
        android:layout_marginStart="12dp"
        android:text="-"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/numberOfDice"
        app:layout_constraintTop_toBottomOf="@+id/plusTXT" />

    <Button
        android:id="@+id/roll"
        android:layout_width="119dp"
        android:layout_height="59dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:text="Roll"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/preMadeRollText"
        app:layout_constraintEnd_toStartOf="@+id/result"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/resultTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Result:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/result"
        tools:layout_editor_absoluteX="193dp" />

    <TextView
        android:id="@+id/result"
        android:layout_width="117dp"
        android:layout_height="61dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/back"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rollCustom"
        tools:layout_editor_absoluteX="166dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:checkedButton="@id/radioButtonPlus"
        app:layout_constraintEnd_toStartOf="@+id/modifier"
        tools:layout_editor_absoluteY="83dp">

        <RadioButton
            android:id="@+id/radioButtonMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@android:drawable/radiobutton_off_background"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="105dp" />

        <RadioButton
            android:id="@+id/radioButtonPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@android:drawable/radiobutton_off_background"
            tools:layout_editor_absoluteX="258dp"
            tools:layout_editor_absoluteY="85dp" />
    </RadioGroup>

    <Button
        android:id="@+id/createNew"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:text="Create New:"
        tools:layout_editor_absoluteX="254dp"
        tools:layout_editor_absoluteY="313dp" />

    <Button
        android:id="@+id/rollCustom"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:text="Roll Custom:"
        app:layout_constraintBottom_toTopOf="@+id/createNew"
        tools:layout_editor_absoluteX="254dp" />

    <Button
        android:id="@+id/animatedRollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Animated Roll"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="422dp" />

    <EditText
        android:id="@+id/preMadeRollText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="76dp"
        android:layout_marginLeft="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Pre-made Dice Roll:"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/spinnerCustomSelection"
        app:layout_constraintEnd_toStartOf="@+id/rollCustom"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/animatedDiceRollSelection"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Animated Dice Roll Selection:"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/AnimatedDiceTypeTXT"
        tools:layout_editor_absoluteX="16dp" />

</android.support.constraint.ConstraintLayout>
